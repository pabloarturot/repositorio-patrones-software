package com.greenhouse.gui;

public class ChartPanelHelper {

	   public static ChartPanel getTermometroPlot(String leyenda,Double temperatura) {

	        DefaultValueDataset dataset;
	        ThermometerPlot plot ;
	        JFreeChart chart ;

	        dataset = new DefaultValueDataset(temperatura);
	        plot = new ThermometerPlot(dataset);
	        chart = new JFreeChart(leyenda,JFreeChart.DEFAULT_TITLE_FONT,plot,false);

	        plot.setThermometerStroke(new BasicStroke(2.0f));
	        plot.setThermometerPaint(Color.lightGray);

	        ChartPanel chartPanel = new ChartPanel(chart);
	        return chartPanel;

	    }
}
