package com.greenhouse.sim;

import java.util.List;
import java.util.Map;

import com.greenhouse.base.Message;

public class ContextConsultaTemperatura {

	private ContextCommunicationController receiverInformacionTemp;

    public ContextConsultaTemperatura(ContextCommunicationController receiverInformacionTempParam){
        receiverInformacionTemp=receiverInformacionTempParam;
    }

    public List<Message> obtenerLecturasTerminales() {

        Map<String, Mensaje> temperaturasMap = receiverInformacionTemp.recibirMensajes();
        Set<String> keysTemperaturas = temperaturasMap.keySet();

        ArrayList<Mensaje> lecturasTemp = new ArrayList<Mensaje>();

        for (String key : keysTemperaturas) {

            Mensaje mensaje = temperaturasMap.get(key);

            if (mensaje != null) {               
               
                String nombre = mensaje.getAlias();

                //si no trae nombre entonces se le asigna la ip para identificarlo
                if (nombre == null || (nombre.trim()).equals("")) {
                    nombre=mensaje.getIp();
                }

                Mensaje dto = new MensajeBean("",nombre,mensaje.getTemperatura(),mensaje.getTimestamp(),mensaje.getFrecuencia());
                lecturasTemp.add(dto);
            }
        }

        return lecturasTemp;

    }
}
